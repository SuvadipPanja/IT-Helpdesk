# Local development environment variables
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# Database (SQL Server - LOCAL)
# If using SQL Server Express on Windows, use: localhost\SQLEXPRESS
DB_SERVER=localhost\SQLEXPRESS
DB_NAME=ITHelpdesk
DB_USER=sa
DB_PASSWORD=Root@1234
DB_PORT=1433
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# JWT (generate a secure random string - replace below)
JWT_SECRET=replace_with_a_strong_random_string_min_32_chars
JWT_EXPIRE=8h
JWT_REFRESH_EXPIRE=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173
APP_URL=http://localhost:5000

# SMTP disabled for local by default
EMAIL_ENABLED=false

# Logging
LOG_LEVEL=DEBUG
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=false
