import { useState, useEffect } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import { useAuth } from '../../context/AuthContext';
import {
  ArrowLeft,
  Edit,
  Trash2,
  Clock,
  User,
  Calendar,
  Tag,
  AlertCircle,
  CheckCircle2,
  MessageSquare,
  Paperclip,
  Activity,
  UserPlus,
  TrendingUp,
  Shield,
  Target,
  Zap,
  RefreshCw,
  Eye,
  EyeOff
} from 'lucide-react';
import api from '../../services/api';
import '../../styles/TicketDetail.css';

const TicketDetail = () => {
  const { id } = useParams();
  const navigate = useNavigate();
  const { user } = useAuth();

  const [ticket, setTicket] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [activeTab, setActiveTab] = useState('comments');
  const [engineers, setEngineers] = useState([]);
  const [selectedEngineer, setSelectedEngineer] = useState('');
  const [assigning, setAssigning] = useState(false);
  const [comment, setComment] = useState('');
  const [isInternalNote, setIsInternalNote] = useState(false);
  const [submittingComment, setSubmittingComment] = useState(false);
  const [refreshing, setRefreshing] = useState(false);

  useEffect(() => {
    fetchTicketDetails();
    fetchEngineers();
  }, [id]);

  const fetchTicketDetails = async () => {
    try {
      setLoading(true);
      setError('');
      const response = await api.get(`/tickets/${id}`);
      
      if (response.data.success) {
        setTicket(response.data.data);
      }
    } catch (err) {
      console.error('Error fetching ticket:', err);
      setError(err.response?.data?.message || 'Failed to load ticket details');
    } finally {
      setLoading(false);
    }
  };

  const fetchEngineers = async () => {
    try {
      const response = await api.get('/users?role_code=ENGINEER,ADMIN,MANAGER');
      if (response.data.success) {
        setEngineers(response.data.data.users || []);
      }
    } catch (err) {
      console.error('Error fetching engineers:', err);
    }
  };

  const handleRefresh = async () => {
    setRefreshing(true);
    await fetchTicketDetails();
    setTimeout(() => setRefreshing(false), 500);
  };

  const handleAssignEngineer = async () => {
    if (!selectedEngineer) {
      alert('Please select an engineer');
      return;
    }

    try {
      setAssigning(true);
      const response = await api.put(`/tickets/${id}/assign`, {
        assigned_to: selectedEngineer
      });

      if (response.data.success) {
        await fetchTicketDetails();
        setSelectedEngineer('');
        alert('Engineer assigned successfully');
      }
    } catch (err) {
      console.error('Error assigning engineer:', err);
      alert(err.response?.data?.message || 'Failed to assign engineer');
    } finally {
      setAssigning(false);
    }
  };

  const handlePostComment = async () => {
    if (!comment.trim()) {
      alert('Please enter a comment');
      return;
    }

    try {
      setSubmittingComment(true);
      const response = await api.post(`/tickets/${id}/comments`, {
        comment_text: comment,
        is_internal: isInternalNote
      });

      if (response.data.success) {
        setComment('');
        setIsInternalNote(false);
        await fetchTicketDetails();
      }
    } catch (err) {
      console.error('Error posting comment:', err);
      alert(err.response?.data?.message || 'Failed to post comment');
    } finally {
      setSubmittingComment(false);
    }
  };

  const handleDelete = async () => {
    if (!window.confirm('Are you sure you want to delete this ticket? This action cannot be undone.')) {
      return;
    }

    try {
      const response = await api.delete(`/tickets/${id}`);
      if (response.data.success) {
        alert('Ticket deleted successfully');
        navigate('/tickets');
      }
    } catch (err) {
      console.error('Error deleting ticket:', err);
      alert(err.response?.data?.message || 'Failed to delete ticket');
    }
  };

  const calculateSLAProgress = () => {
    if (!ticket?.due_date || !ticket?.created_at) return { percentage: 0, status: 'no-sla' };

    const now = new Date();
    const created = new Date(ticket.created_at);
    const due = new Date(ticket.due_date);
    const totalTime = due - created;
    const elapsed = now - created;
    const percentage = Math.min((elapsed / totalTime) * 100, 100);

    let status = 'on-track';
    if (now > due || ticket.sla_breach_notified_at) {
      status = 'breached';
    } else if (percentage >= 80) {
      status = 'at-risk';
    }

    return { percentage: percentage.toFixed(1), status };
  };

  const getSLAStatusConfig = (status) => {
    const configs = {
      'on-track': {
        color: 'var(--success-color)',
        bgColor: 'var(--success-light)',
        icon: CheckCircle2,
        label: 'On Track',
        description: 'SLA is being met'
      },
      'at-risk': {
        color: 'var(--warning-color)',
        bgColor: 'var(--warning-light)',
        icon: AlertCircle,
        label: 'At Risk',
        description: 'SLA deadline approaching'
      },
      'breached': {
        color: 'var(--error-color)',
        bgColor: 'var(--error-light)',
        icon: AlertCircle,
        label: 'Breached',
        description: 'SLA deadline missed'
      },
      'no-sla': {
        color: 'var(--text-muted)',
        bgColor: 'var(--bg-tertiary)',
        icon: Clock,
        label: 'No SLA',
        description: 'SLA not configured'
      }
    };
    return configs[status] || configs['no-sla'];
  };

  const getStatusBadgeStyle = (statusCode) => {
    const styles = {
      OPEN: { bg: '#fef3c7', color: '#92400e', icon: Clock },
      IN_PROGRESS: { bg: '#dbeafe', color: '#1e40af', icon: RefreshCw },
      PENDING: { bg: '#fce7f3', color: '#831843', icon: Clock },
      ON_HOLD: { bg: '#f3e8ff', color: '#5b21b6', icon: Clock },
      RESOLVED: { bg: '#d1fae5', color: '#065f46', icon: CheckCircle2 },
      CLOSED: { bg: '#e5e7eb', color: '#1f2937', icon: CheckCircle2 },
      CANCELLED: { bg: '#fee2e2', color: '#991b1b', icon: AlertCircle }
    };
    return styles[statusCode] || { bg: '#f3f4f6', color: '#4b5563', icon: Tag };
  };

  const getPriorityBadgeStyle = (priorityCode) => {
    const styles = {
      CRITICAL: { bg: '#fee2e2', color: '#991b1b', icon: Zap },
      HIGH: { bg: '#fed7aa', color: '#9a3412', icon: TrendingUp },
      MEDIUM: { bg: '#fef3c7', color: '#92400e', icon: Target },
      LOW: { bg: '#dbeafe', color: '#1e40af', icon: Shield },
      PLANNING: { bg: '#e0e7ff', color: '#3730a3', icon: Calendar }
    };
    return styles[priorityCode] || { bg: '#f3f4f6', color: '#4b5563', icon: Tag };
  };

  const formatDate = (dateString) => {
    if (!dateString) return 'N/A';
    return new Date(dateString).toLocaleString('en-IN', {
      year: 'numeric',
      month: 'short',
      day: '2-digit',
      hour: '2-digit',
      minute: '2-digit',
      hour12: true
    });
  };

  const getTimeRemaining = () => {
    if (!ticket?.due_date) return null;
    
    const now = new Date();
    const due = new Date(ticket.due_date);
    const diff = due - now;
    
    if (diff < 0) {
      const hours = Math.abs(Math.floor(diff / (1000 * 60 * 60)));
      const days = Math.floor(hours / 24);
      return `Overdue by ${days}d ${hours % 24}h`;
    }
    
    const hours = Math.floor(diff / (1000 * 60 * 60));
    const days = Math.floor(hours / 24);
    return `${days}d ${hours % 24}h remaining`;
  };

  if (loading) {
    return (
      <div className="ticket-detail-loading">
        <div className="loading-spinner"></div>
        <p>Loading ticket details...</p>
      </div>
    );
  }

  if (error || !ticket) {
    return (
      <div className="ticket-detail-error">
        <AlertCircle size={48} />
        <h2>Failed to Load Ticket</h2>
        <p>{error || 'Ticket not found'}</p>
        <button onClick={() => navigate('/tickets')} className="btn-back">
          <ArrowLeft size={18} />
          Back to Tickets
        </button>
      </div>
    );
  }

  const slaProgress = calculateSLAProgress();
  const slaConfig = getSLAStatusConfig(slaProgress.status);
  const statusStyle = getStatusBadgeStyle(ticket.status_code);
  const priorityStyle = getPriorityBadgeStyle(ticket.priority_code);
  const StatusIcon = statusStyle.icon;
  const PriorityIcon = priorityStyle.icon;
  const SLAIcon = slaConfig.icon;

  return (
    <div className="ticket-detail-container">
      {/* Header Section */}
      <div className="ticket-detail-header">
        <div className="header-left">
          <button 
            onClick={() => navigate('/tickets')} 
            className="btn-back-modern"
          >
            <ArrowLeft size={18} />
            <span>Back to Tickets</span>
          </button>
          <div className="ticket-title-section">
            <div className="ticket-number-badge">#{ticket.ticket_number}</div>
            <h1 className="ticket-subject">{ticket.subject}</h1>
          </div>
        </div>
        <div className="header-right">
          <button 
            onClick={handleRefresh} 
            className={`btn-icon-modern ${refreshing ? 'spinning' : ''}`}
            title="Refresh"
          >
            <RefreshCw size={18} />
          </button>
          {user?.permissions?.can_manage_system && (
            <button 
              onClick={() => navigate(`/tickets/edit/${id}`)} 
              className="btn-edit-modern"
            >
              <Edit size={18} />
              <span>Edit</span>
            </button>
          )}
          {user?.permissions?.can_delete_tickets && (
            <button 
              onClick={handleDelete} 
              className="btn-delete-modern"
            >
              <Trash2 size={18} />
              <span>Delete</span>
            </button>
          )}
        </div>
      </div>

      {/* Status Bar */}
      <div className="ticket-status-bar">
        <div className="status-badge-modern" style={{ 
          backgroundColor: statusStyle.bg, 
          color: statusStyle.color 
        }}>
          <StatusIcon size={16} />
          <span>{ticket.status_name}</span>
        </div>
        <div className="status-badge-modern" style={{ 
          backgroundColor: priorityStyle.bg, 
          color: priorityStyle.color 
        }}>
          <PriorityIcon size={16} />
          <span>{ticket.priority_name}</span>
        </div>
        <div className="status-badge-modern" style={{ 
          backgroundColor: slaConfig.bgColor, 
          color: slaConfig.color 
        }}>
          <SLAIcon size={16} />
          <span>{slaConfig.label}</span>
        </div>
        {ticket.is_escalated && (
          <div className="status-badge-modern escalated-badge">
            <TrendingUp size={16} />
            <span>Escalated</span>
          </div>
        )}
      </div>

      {/* Main Content Grid */}
      <div className="ticket-detail-grid">
        {/* Left Column - Main Content */}
        <div className="ticket-main-content">
          
          {/* SLA Information Card */}
          {ticket.due_date && (
            <div className="info-card sla-card">
              <div className="card-header-modern">
                <div className="card-title-modern">
                  <Target size={20} />
                  <h3>SLA Information</h3>
                </div>
                <span className="sla-time-remaining">{getTimeRemaining()}</span>
              </div>
              
              <div className="sla-progress-container">
                <div className="sla-progress-header">
                  <span className="sla-label">Time Elapsed</span>
                  <span className="sla-percentage" style={{ color: slaConfig.color }}>
                    {slaProgress.percentage}%
                  </span>
                </div>
                <div className="sla-progress-bar">
                  <div 
                    className="sla-progress-fill"
                    style={{ 
                      width: `${slaProgress.percentage}%`,
                      backgroundColor: slaConfig.color
                    }}
                  ></div>
                </div>
                <p className="sla-description">{slaConfig.description}</p>
              </div>

              <div className="sla-details-grid">
                <div className="sla-detail-item">
                  <span className="detail-label">Total SLA Time</span>
                  <span className="detail-value">
                    {ticket.sla_hours ? `${ticket.sla_hours}h` : 'N/A'}
                  </span>
                </div>
                <div className="sla-detail-item">
                  <span className="detail-label">Started At</span>
                  <span className="detail-value">{formatDate(ticket.created_at)}</span>
                </div>
                <div className="sla-detail-item">
                  <span className="detail-label">Due By</span>
                  <span className="detail-value">{formatDate(ticket.due_date)}</span>
                </div>
                <div className="sla-detail-item">
                  <span className="detail-label">Time Remaining</span>
                  <span className="detail-value" style={{ 
                    color: slaProgress.status === 'breached' ? 'var(--error-color)' : 'inherit' 
                  }}>
                    {getTimeRemaining()}
                  </span>
                </div>
              </div>
            </div>
          )}

          {/* Ticket Information Card */}
          <div className="info-card">
            <div className="card-header-modern">
              <div className="card-title-modern">
                <Tag size={20} />
                <h3>Ticket Information</h3>
              </div>
            </div>

            <div className="ticket-description-section">
              <label className="section-label">Description</label>
              <p className="ticket-description">{ticket.description || 'No description provided'}</p>
            </div>

            <div className="ticket-info-grid">
              <div className="info-item">
                <div className="info-icon">
                  <Tag size={18} />
                </div>
                <div className="info-content">
                  <span className="info-label">Category</span>
                  <span className="info-value">{ticket.category_name || 'Uncategorized'}</span>
                </div>
              </div>

              <div className="info-item">
                <div className="info-icon">
                  <User size={18} />
                </div>
                <div className="info-content">
                  <span className="info-label">Requester</span>
                  <div className="user-info">
                    {ticket.requester_profile_picture && (
                      <img 
                        src={`http://localhost:5000${ticket.requester_profile_picture}`}
                        alt={ticket.requester_name}
                        className="user-avatar-small"
                      />
                    )}
                    <span className="info-value">{ticket.requester_name}</span>
                  </div>
                </div>
              </div>

              <div className="info-item">
                <div className="info-icon">
                  <UserPlus size={18} />
                </div>
                <div className="info-content">
                  <span className="info-label">Assigned To</span>
                  <div className="user-info">
                    {ticket.assigned_profile_picture && (
                      <img 
                        src={`http://localhost:5000${ticket.assigned_profile_picture}`}
                        alt={ticket.assigned_to_name}
                        className="user-avatar-small"
                      />
                    )}
                    <span className="info-value">
                      {ticket.assigned_to_name || 'Unassigned'}
                    </span>
                  </div>
                </div>
              </div>

              <div className="info-item">
                <div className="info-icon">
                  <Calendar size={18} />
                </div>
                <div className="info-content">
                  <span className="info-label">Created</span>
                  <span className="info-value">{formatDate(ticket.created_at)}</span>
                </div>
              </div>
            </div>
          </div>

          {/* Assign Engineer Card */}
          {user?.permissions?.can_assign_tickets && (
            <div className="info-card assign-card">
              <div className="card-header-modern">
                <div className="card-title-modern">
                  <UserPlus size={20} />
                  <h3>Assign Engineer</h3>
                </div>
              </div>

              <div className="assign-engineer-content">
                <select
                  value={selectedEngineer}
                  onChange={(e) => setSelectedEngineer(e.target.value)}
                  className="select-engineer-modern"
                  disabled={assigning}
                >
                  <option value="">Select Engineer...</option>
                  {engineers.map((engineer) => (
                    <option key={engineer.user_id} value={engineer.user_id}>
                      {engineer.first_name} {engineer.last_name} ({engineer.role_name})
                    </option>
                  ))}
                </select>
                <button
                  onClick={handleAssignEngineer}
                  disabled={!selectedEngineer || assigning}
                  className="btn-assign-modern"
                >
                  {assigning ? (
                    <>
                      <RefreshCw size={18} className="spinning" />
                      <span>Assigning...</span>
                    </>
                  ) : (
                    <>
                      <UserPlus size={18} />
                      <span>Assign</span>
                    </>
                  )}
                </button>
              </div>
            </div>
          )}
        </div>

        {/* Right Column - Tabs */}
        <div className="ticket-sidebar-content">
          {/* Tabs Navigation */}
          <div className="tabs-navigation-modern">
            <button
              className={`tab-button-modern ${activeTab === 'comments' ? 'active' : ''}`}
              onClick={() => setActiveTab('comments')}
            >
              <MessageSquare size={18} />
              <span>Comments</span>
              <span className="tab-count">{ticket.comments?.length || 0}</span>
            </button>
            <button
              className={`tab-button-modern ${activeTab === 'activity' ? 'active' : ''}`}
              onClick={() => setActiveTab('activity')}
            >
              <Activity size={18} />
              <span>Activity</span>
              <span className="tab-count">{ticket.activities?.length || 0}</span>
            </button>
            <button
              className={`tab-button-modern ${activeTab === 'attachments' ? 'active' : ''}`}
              onClick={() => setActiveTab('attachments')}
            >
              <Paperclip size={18} />
              <span>Attachments</span>
              <span className="tab-count">{ticket.attachments?.length || 0}</span>
            </button>
          </div>

          {/* Tab Content */}
          <div className="tab-content-modern">
            {activeTab === 'comments' && (
              <div className="comments-section">
                {/* Comment Input */}
                <div className="comment-input-card">
                  <textarea
                    value={comment}
                    onChange={(e) => setComment(e.target.value)}
                    placeholder="Write a comment..."
                    className="comment-textarea-modern"
                    rows="4"
                  />
                  <div className="comment-actions">
                    <label className="internal-note-toggle">
                      <input
                        type="checkbox"
                        checked={isInternalNote}
                        onChange={(e) => setIsInternalNote(e.target.checked)}
                      />
                      <div className="toggle-icon">
                        {isInternalNote ? <EyeOff size={16} /> : <Eye size={16} />}
                      </div>
                      <span>Internal Note (Staff Only)</span>
                    </label>
                    <button
                      onClick={handlePostComment}
                      disabled={submittingComment || !comment.trim()}
                      className="btn-post-comment-modern"
                    >
                      {submittingComment ? (
                        <>
                          <RefreshCw size={18} className="spinning" />
                          <span>Posting...</span>
                        </>
                      ) : (
                        <>
                          <MessageSquare size={18} />
                          <span>Post Comment</span>
                        </>
                      )}
                    </button>
                  </div>
                </div>

                {/* Comments List */}
                <div className="comments-list">
                  {ticket.comments && ticket.comments.length > 0 ? (
                    ticket.comments.map((comment) => (
                      <div 
                        key={comment.comment_id} 
                        className={`comment-item-modern ${comment.is_internal ? 'internal' : ''}`}
                      >
                        <div className="comment-header">
                          <div className="comment-author">
                            {comment.profile_picture && (
                              <img
                                src={`http://localhost:5000${comment.profile_picture}`}
                                alt={comment.author_name}
                                className="comment-avatar"
                              />
                            )}
                            <div className="comment-author-info">
                              <span className="author-name">{comment.author_name}</span>
                              <span className="comment-time">{formatDate(comment.created_at)}</span>
                            </div>
                          </div>
                          {comment.is_internal && (
                            <span className="internal-badge">
                              <EyeOff size={14} />
                              Internal
                            </span>
                          )}
                        </div>
                        <p className="comment-text">{comment.comment_text}</p>
                      </div>
                    ))
                  ) : (
                    <div className="empty-state">
                      <MessageSquare size={48} />
                      <p>No comments yet</p>
                      <span>Be the first to comment on this ticket</span>
                    </div>
                  )}
                </div>
              </div>
            )}

            {activeTab === 'activity' && (
              <div className="activity-section">
                {ticket.activities && ticket.activities.length > 0 ? (
                  <div className="activity-timeline">
                    {ticket.activities.map((activity, index) => (
                      <div key={activity.activity_id || index} className="activity-item-modern">
                        <div className="activity-icon">
                          <Activity size={16} />
                        </div>
                        <div className="activity-content">
                          <p className="activity-description">{activity.description}</p>
                          <div className="activity-meta">
                            <span className="activity-author">{activity.performed_by_name}</span>
                            <span className="activity-time">{formatDate(activity.created_at)}</span>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                ) : (
                  <div className="empty-state">
                    <Activity size={48} />
                    <p>No activity yet</p>
                    <span>Activity will appear here as the ticket progresses</span>
                  </div>
                )}
              </div>
            )}

            {activeTab === 'attachments' && (
              <div className="attachments-section">
                {ticket.attachments && ticket.attachments.length > 0 ? (
                  <div className="attachments-grid">
                    {ticket.attachments.map((attachment) => (
                      <div key={attachment.attachment_id} className="attachment-card-modern">
                        <div className="attachment-icon">
                          <Paperclip size={24} />
                        </div>
                        <div className="attachment-info">
                          <span className="attachment-name">{attachment.filename}</span>
                          <span className="attachment-size">
                            {(attachment.file_size / 1024).toFixed(1)} KB
                          </span>
                        </div>
                        <a
                          href={`http://localhost:5000${attachment.file_path}`}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="btn-download-attachment"
                        >
                          Download
                        </a>
                      </div>
                    ))}
                  </div>
                ) : (
                  <div className="empty-state">
                    <Paperclip size={48} />
                    <p>No attachments</p>
                    <span>Files attached to this ticket will appear here</span>
                  </div>
                )}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
};

export default TicketDetail;