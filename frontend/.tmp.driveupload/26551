                    </div>
                  </div>
                </div>
              </div>

              {/* Auto-Assignment Section */}
              <div className="settings-section">
                <div className="settings-section-header">
                  <User />
                  <h3>Auto-Assignment</h3>
                </div>
                <div className="settings-section-content">
