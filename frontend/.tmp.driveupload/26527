// ============================================
// LOGIN PAGE - DEBUG VERSION
// User authentication with error visibility
// Developer: Suvadip Panja
// ============================================

import { useState, useEffect, useRef } from 'react';
import { useNavigate } from 'react-router-dom';
import { Lock, User, Eye, EyeOff, AlertCircle, Shield, CheckCircle } from 'lucide-react';
import { useAuth } from '../../context/AuthContext';
import { getSetting } from '../../utils/settingsLoader';
import '../../styles/Login.css';

const Login = () => {
  // ============================================
  // STATE MANAGEMENT
  // ============================================
  const [formData, setFormData] = useState({
    username: '',
    password: ''
  });
  const [showPassword, setShowPassword] = useState(false);
  const [error, setError] = useState('');
  const [loading, setLoading] = useState(false);
  const [errorSetTime, setErrorSetTime] = useState(null);
  
  // Timer to control error visibility - stays for 10 seconds
  const errorTimerRef = useRef(null);
  const renderCountRef = useRef(0);

  // Track component renders
  renderCountRef.current += 1;
  console.log(`ğŸ”„ Login component render #${renderCountRef.current}`);

  // ============================================
  // HOOKS & SETTINGS
  // ============================================
  const { login } = useAuth();
  const navigate = useNavigate();

  const systemName = getSetting('system_name', 'Nexus Support');
  const systemTitle = getSetting('system_title', 'IT Service Desk');
  const companyName = getSetting('company_name', 'Your Company');
  const maintenanceModeValue = getSetting('maintenance_mode', 'false');
  const maintenanceMode = maintenanceModeValue === 'true' || maintenanceModeValue === true || maintenanceModeValue === 1;
  const maintenanceMessage = getSetting('maintenance_message', 'System is under maintenance. Please check back later.');

  // ============================================
  // CLEANUP TIMER ON UNMOUNT
  // ============================================
  useEffect(() => {
    console.log('âœ… Login component mounted');
    return () => {
      console.log('ğŸ—‘ï¸ Login component unmounting');
      if (errorTimerRef.current) {
        clearTimeout(errorTimerRef.current);
      }
    };
  }, []);

  // ============================================
  // MONITOR ERROR CHANGES
  // ============================================
  useEffect(() => {
    if (error) {
      console.log('ğŸ”´ ERROR STATE CHANGED:', error);
      console.log('â° Error set at:', new Date().toLocaleTimeString());
    } else {
      console.log('âœ… ERROR CLEARED');
    }
  }, [error]);

  // ============================================
  // SET ERROR WITH 10-SECOND AUTO-CLEAR
  // Developer: Suvadip Panja
  // ============================================
  const setErrorWithTimer = (errorMessage) => {
    const timestamp = new Date().toLocaleTimeString();
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    console.log('ğŸ”´ SETTING ERROR:', errorMessage);
    console.log('â° Time:', timestamp);
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    
    // Clear any existing timer
    if (errorTimerRef.current) {
      console.log('âš ï¸ Clearing existing error timer');
      clearTimeout(errorTimerRef.current);
    }

    // Set the error
    setError(errorMessage);
    setErrorSetTime(timestamp);

    // Auto-clear after 10 seconds
    errorTimerRef.current = setTimeout(() => {
      console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
      console.log('â° 10 SECONDS PASSED - Auto-clearing error');
      console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
      setError('');
      setErrorSetTime(null);
      errorTimerRef.current = null;
    }, 10000); // 10 seconds

    console.log('âœ… Error timer set for 10 seconds');
  };

  // ============================================
  // HANDLE INPUT CHANGE - NO ERROR CLEARING!
  // Developer: Suvadip Panja
  // ============================================
  const handleChange = (e) => {
    const { name, value } = e.target;
    console.log(`âŒ¨ï¸ User typing in ${name}:`, value.substring(0, 3) + '...');
    
    setFormData(prev => ({
      ...prev,
      [name]: value
    }));
    
    // CRITICAL: DO NOT CLEAR ERROR WHILE TYPING!
    // Error should stay visible for full 10 seconds
    console.log('ğŸ’¡ Error NOT cleared (will auto-clear after 10 seconds)');
  };

  // ============================================
  // HANDLE FORM SUBMIT
  // Developer: Suvadip Panja
  // ============================================
  const handleSubmit = async (e) => {
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    console.log('ğŸš€ FORM SUBMIT TRIGGERED');
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    
    // CRITICAL: Prevent page refresh
    if (e && e.preventDefault) {
      e.preventDefault();
      console.log('âœ… preventDefault() called');
    }
    if (e && e.stopPropagation) {
      e.stopPropagation();
      console.log('âœ… stopPropagation() called');
    }
    
    // Check maintenance mode
    if (maintenanceMode) {
      console.log('ğŸ”§ Maintenance mode active');
      setErrorWithTimer(maintenanceMessage);
      return;
    }
    
    // Validate inputs
    if (!formData.username.trim() || !formData.password.trim()) {
      console.log('âŒ Validation failed: Empty fields');
      setErrorWithTimer('Please enter both username and password');
      return;
    }
    
    // Clear error and start loading
    console.log('ğŸ§¹ Clearing any existing errors');
    setError('');
    setErrorSetTime(null);
    if (errorTimerRef.current) {
      clearTimeout(errorTimerRef.current);
      errorTimerRef.current = null;
    }
    
    console.log('â³ Setting loading state to true');
    setLoading(true);

    try {
      console.log('ğŸ“¡ Calling login API...');
      const response = await login(formData.username, formData.password);
      
      console.log('ğŸ“¥ Login response received:', response);
      
      if (response && response.success) {
        console.log('âœ… LOGIN SUCCESS!');
        console.log('ğŸš€ Navigating to dashboard...');
        navigate('/dashboard');
      } else {
        console.log('âŒ LOGIN FAILED');
        const errorMsg = response?.message || 'Invalid username or password';
        console.log('ğŸ“ Error message:', errorMsg);
        setErrorWithTimer(errorMsg);
      }
    } catch (err) {
      console.log('ğŸ’¥ EXCEPTION CAUGHT:', err);
      
      let errorMsg = 'An error occurred. Please try again.';
      
      if (err.response) {
        console.log('ğŸ“¡ Server responded with error');
        errorMsg = err.response.data?.message || 'Invalid username or password';
      } else if (err.request) {
        console.log('ğŸ”Œ No response from server');
        errorMsg = 'Cannot connect to server. Please try again.';
      } else {
        console.log('âš ï¸ Request setup error');
        errorMsg = err.message || 'An error occurred. Please try again.';
      }
      
      setErrorWithTimer(errorMsg);
    } finally {
      console.log('â³ Setting loading state to false');
      setLoading(false);
      console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
      console.log('ğŸ FORM SUBMIT COMPLETED');
      console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');
    }
    
    // Return false to prevent any default behavior
    return false;
  };

  // ============================================
  // FORM VALIDATION
  // ============================================
  const isFormValid = formData.username.trim() !== '' && formData.password.trim() !== '';

  // ============================================
  // RENDER COMPONENT
  // ============================================
  return (
    <div className="login-container">
      <div className="login-card">
        {/* LOGO SECTION */}
        <div className="login-logo">
          <div className="logo-icon">
            <Shield size={32} />
          </div>
          <h1 className="login-title">{systemName}</h1>
          <p className="login-subtitle">{systemTitle}</p>
        </div>

        {/* DEBUG INFO - Remove after testing */}
        <div style={{
          background: 'rgba(59, 130, 246, 0.1)',
          border: '1px solid rgba(59, 130, 246, 0.3)',
          borderRadius: '8px',
          padding: '10px',
          marginBottom: '15px',
          fontSize: '11px',
          color: 'rgba(255, 255, 255, 0.8)'
        }}>
          <div style={{ display: 'flex', alignItems: 'center', gap: '5px', marginBottom: '5px' }}>
            <CheckCircle size={14} />
            <strong>Debug Mode Active</strong>
          </div>
          <div>Renders: {renderCountRef.current}</div>
          <div>Error: {error ? 'ğŸ”´ YES' : 'âœ… NO'}</div>
          {errorSetTime && <div>Set at: {errorSetTime}</div>}
          <div style={{ fontSize: '10px', marginTop: '5px', opacity: 0.7 }}>
            Open Console (F12) to see detailed logs
          </div>
        </div>

        {/* MAINTENANCE MODE WARNING */}
        {maintenanceMode && (
          <div className="maintenance-warning">
            <AlertCircle size={20} />
            <div>
              <strong>Maintenance Mode</strong>
              <p>System login is currently disabled</p>
            </div>
          </div>
        )}

        {/* LOGIN FORM */}
        <form 
          onSubmit={handleSubmit}
          className="login-form" 
          noValidate
        >
          {/* ERROR MESSAGE - Visible for 10 seconds */}
          {error && (
            <div className={`error-message ${maintenanceMode ? 'maintenance-error' : ''}`}>
              <AlertCircle size={18} />
              <span>{error}</span>
            </div>
          )}

          {/* USERNAME INPUT */}
          <div className="form-group">
            <label htmlFor="username">Username</label>
            <div className="input-wrapper">
              <User className="input-icon" size={18} />
              <input
                type="text"
                id="username"
                name="username"
                value={formData.username}
                onChange={handleChange}
                placeholder="Enter your username"
                required
                autoComplete="username"
                disabled={loading || maintenanceMode}
              />
            </div>
          </div>

          {/* PASSWORD INPUT */}
          <div className="form-group">
            <label htmlFor="password">Password</label>
            <div className="input-wrapper">
              <Lock className="input-icon" size={18} />
              <input
                type={showPassword ? 'text' : 'password'}
                id="password"
                name="password"
                value={formData.password}
                onChange={handleChange}
                placeholder="Enter your password"
                required
                autoComplete="current-password"
                disabled={loading || maintenanceMode}
              />
              <button
                type="button"
                className="password-toggle"
                onClick={() => setShowPassword(!showPassword)}
                aria-label={showPassword ? 'Hide password' : 'Show password'}
                disabled={loading || maintenanceMode}
                tabIndex={-1}
              >
                {showPassword ? <EyeOff size={18} /> : <Eye size={18} />}
              </button>
            </div>
          </div>

          {/* SUBMIT BUTTON */}
          <button 
            type="submit"
            className="login-button"
            disabled={!isFormValid || loading || maintenanceMode}
          >
            {loading ? (
              <>
                <span>Signing in</span>
                <span className="loading-dots">...</span>
              </>
            ) : maintenanceMode ? (
              'LOGIN DISABLED'
            ) : (
              'SIGN IN'
            )}
          </button>
        </form>

        {/* FOOTER */}
        <div className="login-footer">
          <p>Â© 2025 {companyName}. All Rights Reserved</p>
          <p>Developed by <strong>Suvadip Panja</strong></p>
        </div>
      </div>
    </div>
  );
};

export default Login;