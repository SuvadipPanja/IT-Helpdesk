/* ============================================
   SIMPLE ICON TOGGLE (Header Button)
   Note: .theme-toggle-simple styles are also in Header.css
   This file provides base styles if used outside header
   ============================================ */

/* Icon Wrapper */
.theme-toggle-simple .icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
}

/* Icon States */
.theme-toggle-simple .theme-icon {
  position: absolute;
  transition: all 0.3s ease;
}

.theme-toggle-simple .theme-icon.sun {
  color: #f59e0b;
}

.theme-toggle-simple .theme-icon.moon {
  color: #fbbf24;
}

.theme-toggle-simple .theme-icon.visible {
  opacity: 1;
  transform: rotate(0deg) scale(1);
}

.theme-toggle-simple .theme-icon.hidden {
  opacity: 0;
  transform: rotate(90deg) scale(0.5);
}

/* ============================================
   ANIMATION KEYFRAMES
   ============================================ */
@keyframes sunRise {
  from {
    opacity: 0;
    transform: rotate(-90deg) scale(0.5);
  }
  to {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }
}

@keyframes moonRise {
  from {
    opacity: 0;
    transform: rotate(90deg) scale(0.5);
  }
  to {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }
}

.theme-toggle-simple .theme-icon.sun.visible {
  animation: sunRise 0.3s ease forwards;
}

.theme-toggle-simple .theme-icon.moon.visible {
  animation: moonRise 0.3s ease forwards;
}

/* ============================================
   MAIN TOGGLE BUTTON (Track Style - Alternative)
   ============================================ */
.theme-toggle {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 0;
  border: none;
  background: transparent;
  cursor: pointer;
  border-radius: 50px;
  transition: all 0.3s ease;
}

.theme-toggle:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.theme-toggle:focus {
  outline: none;
}

.theme-toggle:focus-visible {
  outline: 2px solid var(--primary-color, #6366f1);
  outline-offset: 2px;
}

.theme-toggle-track {
  position: relative;
  width: 100%;
  height: 100%;
  background: var(--bg-tertiary, #f1f5f9);
  border-radius: 50px;
  padding: 4px;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.theme-toggle:hover .theme-toggle-track {
  background: var(--bg-quaternary, #e2e8f0);
}

.theme-toggle.dark .theme-toggle-track {
  background: var(--bg-tertiary, #334155);
}

.theme-toggle.dark:hover .theme-toggle-track {
  background: var(--bg-quaternary, #475569);
}

.theme-toggle-thumb {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.theme-icon.sun-icon {
  color: #f59e0b;
}

.theme-icon.moon-icon {
  color: #fbbf24;
}

.theme-toggle-label {
  font-size: 13px;
  font-weight: 500;
  color: var(--text-secondary, #64748b);
  margin-left: 4px;
  transition: color 0.3s ease;
}

.theme-toggle:hover .theme-toggle-label {
  color: var(--text-primary, #1e293b);
}

/* ============================================
   REDUCED MOTION
   ============================================ */
@media (prefers-reduced-motion: reduce) {
  .theme-toggle,
  .theme-toggle-track,
  .theme-toggle-thumb,
  .theme-icon,
  .theme-toggle-simple,
  .theme-toggle-simple .theme-icon {
    transition: none !important;
    animation: none !important;
  }
}

